<div class="well">
  <p><%=@showtime.movie.title%></p>
  <p><%=@showtime.time.strftime('%A %b.%d, %Y')%></p>
  <p><%=@showtime.time.strftime('%I:%M%p')%></p>
  <p>$<%= '%.2f' % @showtime.price%></p>
  <p>Room Capacity: <%=@showtime.screen.capacity%></p>
  <p>Tickets Sold: <%=@showtime.tickets_sold%></p>
  <p>Tickets Remaining: <%= @showtime.screen.capacity - @showtime.tickets_sold %></p>

  <% if @showtime.screen.capacity - @showtime.tickets_sold > 0 %>
    <%= link_to "Buy Tickets", new_showtime_order_path(@showtime), :class => 'button' %>
  <% else %>
    <p><strong>SOLD OUT</strong></p>
  <% end %>

</div>
