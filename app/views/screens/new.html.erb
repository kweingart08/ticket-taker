<h1>Add Screen</h1>

<!-- go into screens_path controller and create route  -->
<%= form_for :screen, url: screens_path do |f| %>

  <% if @screen.errors.any? %>
  <% @screen.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>
  <% end %>

  <div class="">
    <%= f.label :room_number %><br>
    <%= f.number_field :room_number %>
  </div>

  <div class="">
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %>
  </div>

  <div class="">
      <%= f.submit({:class => 'button'}) %>
  </div>

<% end %>
