
<%= link_to "Back", admin_index_path, :class => 'button' %>

<h1>All Screens at Theater</h1>

<% @screens.each do |screen| %>

  <div class="well">
    <div class="screen-content">
      <h2>Room Number: <%= screen.room_number %></h2>
      <h4>Capacity: <%= screen.capacity %></h4>
      <%= link_to "Edit", edit_screen_path(screen), :class => 'button' %>
      <%= link_to "Delete", screen_path(screen), method: :delete, data: {confirm: 'Are you sure you want to delete?'}, :class => 'button btn-danger' %>
    </div>
  </div>

<% end %>
