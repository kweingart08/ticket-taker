<%= link_to "Back", owner_index_path, :class => 'button' %>

<h1>Showtimes</h1>
<% @showtimes.each do |showtime| %>
  <div class="well">
    <div class="movie-title">
      <h3><%=showtime.movie.title%></h3>
    </div>

    <div class="details">
      <div class="showtime">
        <h4><%=showtime.time.strftime('%A %b. %d, %Y')%></h4>
        <h4><%=showtime.time.strftime('%I:%M%p')%></h4>
      </div>
      <div class="price">
        <h3>$<%= '%.2f' % showtime.price%></h3>
      </div>
      <div class="info">
        <%= link_to "Showtime Info", showtime_path(showtime), :class => 'button button-primary' %>
        <%= link_to "Delete",
          showtime_path(showtime),
          method: :delete,
          :class => 'button btn-danger' %>
        <%= link_to "Edit",
          edit_showtime_path(showtime),
          :class => 'button' %>
      </div>
    </div>

  </div>
<% end %>
