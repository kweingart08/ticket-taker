
<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      Imports
    </p>
  </header>
  <div class="card-content">
    <div class="content">

        <%= link_to 'Import Some orders', new_order_import_path, class: 'button is-primary' %>

      <% @imports.each do |import| %>
        <div class="notification">
          <p>Status: <%= import.display_status %></p>
          <p>Number of Records: <%= import.number_of_records_imported %></p>
          <% if import.failed? %>
            <p>Errors:</p>
            <ul>
              <% import.formatted_errors.each do |error| %>
                <li class="error"><%= error %></li>
              <% end %>
            </ul>
            <%= link_to 'Fix Import', edit_order_import_path(import), class: 'button is-primary' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
