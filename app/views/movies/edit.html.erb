<%= link_to "Back", admin_index_path, :class => 'button' %>
<h1>Edit Movie</h1>

<!-- form for new movie with a title (text field) -->
<!-- submit to create method -->
<%= form_for :movie, url: movie_path(@movie), method: :patch do |f| %>
  <!-- check if there are any errors with putting in a title -->
  <% if @movie.errors.any? %>
    <% @movie.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
  <% end %>


  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit({:class => 'button button-primary'}) %>
  </p>

<% end %>
