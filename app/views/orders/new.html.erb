<h1>New Order</h1>


<h3>Add Order</h3>

<%= form_for :order, url: showtime_orders_path do |f| %>

  <% if @order.errors.any? %>
    <% @order.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :credit_card_number %><br>
    <%= f.text_field :credit_card_number %>
  </div>

  <div>
    <%= f.label :date %><br>
    <%= f.date_field :expiration_date %>
  </div>

  <div>
    <%= f.label :quantity %><br>
    <%= f.select :quantity, (1..10) %>
  </div>

  <div>
    <%= f.label :showtime_id %><br>
    <%= f.number_field :showtime_id, :value => params[:showtime_id] %>
  </div>


  <div>
    <%= f.submit({:class => 'button'}) %>
  </div>


<% end %>
